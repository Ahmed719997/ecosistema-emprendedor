<script>
  // Canvas Download Logic
  const downloadCanvasBtn = document.getElementById('downloadCanvasBtn');
  if (downloadCanvasBtn) {
    downloadCanvasBtn.addEventListener('click', () => {
      const items = document.querySelectorAll('.canvas-item');
      let content = "CANVAS DEL ECOSISTEMA\n=====================\n\n";
      
      items.forEach(item => {
        const title = item.querySelector('h4')?.textContent || '';
        const text = item.querySelector('textarea')?.value || '';
        content += `${title}:\n${text}\n\n-------------------\n\n`;
      });

      downloadFile('canvas_ecosistema.txt', content);
    });
  }

  // Action Plan Download Logic
  const downloadActionPlanBtn = document.getElementById('downloadActionPlanBtn');
  if (downloadActionPlanBtn) {
    downloadActionPlanBtn.addEventListener('click', () => {
      const rows = document.querySelectorAll('#actionPlanTable tbody tr');
      let content = "PLAN DE ACCIN (MWB)\n====================\n\n";
      
      rows.forEach((row, index) => {
        const inputs = row.querySelectorAll('input');
        const select = row.querySelector('select');
        
        if (inputs.length >= 3 && select) {
          const iniciativa = inputs[0].value || '(Sin iniciativa)';
          const responsable = inputs[1].value || '(Sin responsable)';
          const plazo = inputs[2].value || '(Sin plazo)';
          const prioridad = select.value;

          content += `Iniciativa ${index + 1}: ${iniciativa}\n`;
          content += `Responsable: ${responsable}\n`;
          content += `Plazo: ${plazo}\n`;
          content += `Prioridad: ${prioridad}\n`;
          content += `\n-------------------\n\n`;
        }
      });

      downloadFile('plan_accion.txt', content);
    });
  }

  // Helper function to download file
  function downloadFile(filename: string, content: string) {
    const element = document.createElement('a');
    element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(content));
    element.setAttribute('download', filename);

    element.style.display = 'none';
    document.body.appendChild(element);

    element.click();

    document.body.removeChild(element);
  }
</script>

