---


interface Props {
  title: string;
  description: string;
  href: string;
  icon?: any;
  variant?: 'default' | 'primary' | 'accent';
}

const { title, description, href, icon: Icon, variant = 'default' } = Astro.props;
---

<a href={href} class:list={['card', `card-${variant}`, 'observe', 'hover-lift']}>
  {Icon && (
    <div class="card-icon">
      <Icon size={32} />
    </div>
  )}
  
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
  </div>
  
  <div class="card-arrow">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
  </div>
</a>

<style>
  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    color: var(--dark);
    transition: all var(--transition-base);
    border: 2px solid transparent;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
  }

  .card:hover::before {
    transform: scaleX(1);
  }

  .card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-xl);
  }

  .card-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    border-radius: var(--radius-md);
    color: var(--white);
    flex-shrink: 0;
  }

  .card-default .card-icon {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
  }

  .card-primary .card-icon {
    background: linear-gradient(135deg, var(--accent-green), var(--accent-blue));
  }

  .card-accent .card-icon {
    background: linear-gradient(135deg, var(--accent-yellow), var(--accent-orange));
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--primary);
    margin: 0;
    transition: var(--transition-base);
  }

  .card:hover .card-title {
    color: var(--primary-light);
  }

  .card-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--dark);
    opacity: 0.85;
    margin: 0;
  }

  .card-arrow {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    color: var(--primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all var(--transition-base);
  }

  .card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .card {
      padding: var(--spacing-md);
    }

    .card-icon {
      width: 56px;
      height: 56px;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-description {
      font-size: 0.9375rem;
    }
  }
</style>
